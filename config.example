# Configurações do Sistema de Estacionamento

# Servidor Central
SERVIDOR_CENTRAL_HOST=localhost
SERVIDOR_CENTRAL_PORT=5000

# Servidor Térreo
SERVIDOR_TERREO_HOST=localhost
SERVIDOR_TERREO_PORT=5001

# Servidor 1º Andar
SERVIDOR_ANDAR1_HOST=localhost
SERVIDOR_ANDAR1_PORT=5002

# Servidor 2º Andar
SERVIDOR_ANDAR2_HOST=localhost
SERVIDOR_ANDAR2_PORT=5003

# Configurações MODBUS
MODBUS_PORT=/dev/ttyUSB0
MODBUS_BAUDRATE=115200
MODBUS_TIMEOUT=0.5
MODBUS_RETRIES=3

# Endereços MODBUS
MODBUS_CAMERA_ENTRADA=0x11
MODBUS_CAMERA_SAIDA=0x12
MODBUS_PLACAR=0x20

# Matrícula (4 últimos dígitos)
MATRICULA=1606

# Cobrança
PRECO_POR_MINUTO=0.15

# Vagas por andar
VAGAS_TERREO_PNE=2
VAGAS_TERREO_IDOSO=2
VAGAS_TERREO_COMUNS=4

VAGAS_ANDAR1_PNE=1
VAGAS_ANDAR1_IDOSO=1
VAGAS_ANDAR1_COMUNS=2

VAGAS_ANDAR2_PNE=2
VAGAS_ANDAR2_IDOSO=2
VAGAS_ANDAR2_COMUNS=4

# Confiança mínima para leitura de placas
CONFIANCA_MINIMA=70

